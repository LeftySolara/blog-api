{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@db/*": ["src/db/*"],
      "@entities/*": ["src/entities/*"],
      "@repositories/*": ["src/repositories/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
}